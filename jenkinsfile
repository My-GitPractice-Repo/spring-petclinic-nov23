pipeline {
    agent { label 'MAVEN' }
    options { 
        timeout(time: 30, unit: 'MINUTES') 
    }
    triggers {
        pollSCM('* * * * *')
    }
    stages {
        stage('git') {
            steps {
                git url: 'https://github.com/dummyrepos/spring-petclinic-nov23.git', 
                    branch: 'dev'
            }
        }
        stage('build') {
            steps {
                sh 'mvn clean package'
                archiveArtifacts artifacts: '**/spring-petclinic-*.jar'
                junit testResults: '**/TEST-*.xml'
            }
            post {
                success {
                    archiveArtifacts artifacts: '**/spring-petclinic-*.jar'
                    junit testResults: '**/TEST-*.xml'
                    mail subject: 'build stage success',
                         from: 'build@learningthoughts.io',
                         to: 'all@learningthoughts.io',
                         body: 'refer to $BUILD_URL for more details'
                }
                failure {
                    mail subject: 'build stage failure',
                         from: 'build@learningthoughts.io',
                         to: 'all@learningthoughts.io',
                         body: 'refer to $BUILD_URL for more details'

                }

            }
        }
    }
    
}